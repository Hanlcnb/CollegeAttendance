<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hanlc.attendence.mapper.MessagesMapper">

    <select id="selectLastMessageByCourseIdList" resultType="com.hanlc.attendence.entity.request.MessagesRequest">
        SELECT sender_id , content , type , created_at
        FROM messages
        WHERE course_id  IN
        <foreach collection="courseIdList" item="courseId" open="(" separator="," close=")">
            #{courseId}
        </foreach>
        AND is_read = FALSE ORDER BY createdAt DESC LIMIT 1
    </select>
</mapper>
