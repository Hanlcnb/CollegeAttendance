<scroll-view>
  <view class="notice-container">
    <text class="notice-title">课程通知</text>
    <view class="notice-list" wx:for="{{notices}}" wx:key="index" bind:tap="toPageDetail" data-coursename="{{item.courseName}}" data-courseid="{{item.courseId}}">
      <view class="notice-item">
        <view class="item-left">
          <image class="course-icon" src="{{item.courseName ? ('/images/courseicon/' + item.courseName + '.png') : '/images/courseicon/pending.png'}}" mode="aspectFill"></image>
        </view>
        <view class="item-middle" >
          <view class="title-row">
            <text class="course-name">{{item.courseName}}</text>
          </view>
          <view class="content-row">
            <text class="notice-content">{{item.senderName}}:</text>
            <text class="notice-content" wx:if="{{item.type === 'text'}}">{{item.content}}</text>
            <text class="notice-content" wx:if="{{item.type === 'attend'}}">[签到任务]</text>
            <text class="notice-content" wx:if="{{item.type === 'image'}}">[图片]</text>
            <text class="notice-content" wx:if="{{item.type === 'file'}}">[文件]</text>
            <text class="notice-content" wx:if="{{item.type === 'location'}}">[位置]</text>
          </view>
        </view>
        <view class="item-right">
          <text class="notice-date">{{item.createdAt}}</text>
        </view>
      </view>
    </view>
  </view>
</scroll-view>