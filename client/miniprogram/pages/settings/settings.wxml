<view class="container">
  <!-- 账号安全 -->
  <van-cell-group title="账号安全" inset>
    <van-cell title="账号安全" is-link bind:tap="navigateTo" data-url="/pages/settings/security/security" />
    <van-cell title="隐私设置" is-link bind:tap="navigateTo" data-url="/pages/settings/privacy/privacy" />
  </van-cell-group>

  <!-- 通用设置 -->
  <van-cell-group title="通用设置" inset>
    <van-cell title="通知设置" is-link bind:tap="navigateTo" data-url="/pages/settings/notification/notification" />
    <van-cell title="主题设置" is-link bind:tap="navigateTo" data-url="/pages/settings/theme/theme" />
    <van-cell title="清除缓存" is-link bind:tap="navigateTo" data-url="/pages/settings/cache/cache" />
  </van-cell-group>

  <!-- 关于 -->
  <van-cell-group title="关于" inset>
    <van-cell title="关于我们" is-link bind:tap="navigateTo" data-url="/pages/settings/about/about" />
    <van-cell title="帮助中心" is-link bind:tap="navigateTo" data-url="/pages/settings/help/help" />
  </van-cell-group>

  <!-- 退出登录 -->
  <view class="logout-section">
    <van-button type="danger" block bind:tap="onLogoutTap">退出登录</van-button>
  </view>

  <!-- 退出确认弹窗 -->
  <van-dialog id="van-dialog" />
</view> 