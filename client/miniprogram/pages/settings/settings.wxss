.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100rpx;
  display: flex;
  align-items: flex-start;
}

.van-cell-group {
  margin-bottom: 20rpx;
}

.logout-section {
  margin: 40rpx 20rpx;
}

/* 深色模式样式 */
.dark-mode {
  background-color: #1c1c1e;
  color: #ffffff;
}

.dark-mode .van-cell {
  background-color: #2c2c2e;
  color: #ffffff;
}

.dark-mode .van-cell-group__title {
  color: #8e8e93;
}

.dark-mode .van-switch {
  background-color: #3a3a3c;
} 