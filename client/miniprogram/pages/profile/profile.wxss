/*基本信息区域*/
.basic-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  background-color: #ffffff;
}
.avatar-container {
  margin-bottom: 20rpx;
}
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
}
.info-container {
  text-align: center;
}
.name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
}

.item-container{
  margin-top: 20rpx;
  width: 100%;
}