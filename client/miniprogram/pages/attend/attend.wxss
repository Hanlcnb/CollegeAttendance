/* pages/attend/attend.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex; /* 使用 flexbox */
  flex-direction: column; /* 垂直排列 */
  align-items: center; /* 水平居中 */
  justify-content: flex-start /* 垂直居中 */
}
.header {
  text-align: center;
  margin-top: 100rpx;
  margin-bottom: 25rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

/* 签到部分样式 */
.sign-section {
  background-color: #fff; /* 背景颜色 */
  padding: 30rpx; /* 内边距 */
  border-radius: 10rpx; /* 圆角 */
  margin-top: 25rpx; /* 下边距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
  text-align: center; /* 文本居中 */
}

.qr-code-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.qr-code-container {
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-code {
  width: 100%;
  height: 100%;
}

.qr-code-tip {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 手势签到样式 */
.gesture-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.gesture-pad {
  width: 300rpx;
  height: 300rpx;
  border: 1rpx solid #ccc;
  position: relative;
  margin: 0 auto;
}

.gesture-point {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #2196f3;
  position: absolute;
}

/* 密码输入框样式 */
.password-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.password-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.password-status {
  color: #f44336; /* 错误提示颜色 */
}

/* 人脸识别样式 */
.verifyFace {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn.submit {
  background-color: #2196f3;
  color: #fff;
}

.btn.refresh {
  background-color: #2196f3;
  color: #fff;
}

.btn.end {
  background-color: #f44336;
  color: #fff;
}