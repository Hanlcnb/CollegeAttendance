/**index.wxss**/

.scrollarea {
  flex: 1;
  overflow-y: auto;
  height: 100vh;
}

.screen {		
	background: linear-gradient(30deg, #5d53a7, #ffffff);		
	position: relative;
	min-height: 50vh;
	width: 80%;
	box-shadow: 0px 0px 24px #5C5696;
}

.btnChangeMethod {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  height: 60rpx;
  width: 60rpx;
  background: transparent;
  padding: 0;
  border: none;
  z-index: 2;
}

.btn-image{
  height: 100%;
  width: 100%;
}

.btnChangeMethod::after {
  border: none;
}

.screen__content {
  padding: 60rpx;
	z-index: 1;
	position: relative;	
	width: 100%;
	box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.avatar-wrapper {
  padding: 0;
  width: 200rpx !important;
  border-radius: 8px;
  margin-top: 180rpx;
}

.avatar {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.login {
	width: 320px;
	padding: 30px;
	padding-top: 156px;
}

.login__field {
	padding: 20px 0px;	
	position: relative;
	display: flex;
	align-items: center;
}

.login__input {
	border: none;
	border-bottom: 2px solid #000000;
	background: none;
	padding: 10px;
	padding-left: 24px;
	font-weight: 700;
	width: 75%;
	transition: .2s;
	margin-left: 10px;
}

.login__input:active,
.login__input:focus,
.login__input:hover {
	outline: none;
	border-bottom-color: #6A679E;
}

.button{
  height: 60px;
}

.login__submit {
	background: #fff;
  font-size: 18px;
	margin-top: 15px;
	padding: 16px 20px;
	border-radius: 26px;
	border: 1px solid #D4D3E8;
	text-transform: uppercase;
	font-weight: 700;
	display: flex;
  align-items: center;
  justify-content: center;
	width: 250rpx;
	color: #4C489D;
	box-shadow: 0px 2px 2px #5C5696;
	cursor: pointer;
	transition: .2s;
}

.login__submit:active,
.login__submit:focus,
.login__submit:hover {
	border-color: #6A679E;
	outline: none;
}

.basics-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.basics-label {
  width: 105px;
}

.basics-input {
  flex: 1;
}

.chooseView {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
  margin: 30rpx;
  padding: 30rpx;
}

.chooseBtn {
  width: 150rpx !important;
  height: 150rpx;
  background-color: deepskyblue;
  margin: 0;
  color: white;
  font-size: 32rpx;
  line-height: 1.8;
}

.my-button-hover {
  width: 150rpx !important;
  height: 150rpx;
  background-color:gray;
  margin: 0;
  color: white;
  font-size: 32rpx;
  line-height: 1.8;
}

.login__options {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.login__link {
  color: #4C489D;
  font-size: 28rpx;
  text-decoration: underline;
}

.login__title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4C489D;
  text-align: center;
  margin-bottom: 40rpx;
}

.wechat-login-btn{
  position: absolute;
  top: 30rpx;
  height: 60rpx;
  width: 60rpx;
  background: transparent;
  padding: 0;
  border: none;
  z-index: 2;
}