/*轮播图*/
.swiper {
  height: 400rpx;
  margin: 24rpx;
}
.swiper-image {
  width: 100%;
  height: 100%;
}
/*课程表*/
.course-table {
  background-color: #ffffff;
  margin-top: 48rpx;
}

/* 悬浮按钮样式 */
.float-button {
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #1989fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(25, 137, 250, 0.3);
  z-index: 999;
  transition: all 0.3s ease;
}

.float-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.2);
}

/* schedule styles inlined from component */
.schedule-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #fff;
}

.content{
  display: flex;
  justify-content: center;
}

.week-list{
  left: 0;
  width: 100%;
  height: 92rpx;
  display: flex;
  align-items: center;
  background: #f5f7f8;
  z-index: 1;
}

.blank{
  width: 50rpx;
  height: 100%;
  color: #666666;
}

.week-item{
  width: calc((100% - 50rpx) / 7);
  height:  100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.week-name{
  font-size: 24rpx;
  color: #444444;
}

.week-date{
  font-size: 20rpx;
  color: #a1a1a1;
}

.course-content{
  width: 100%;
  display: flex;
}

.course-nums{
  width: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f6f7;
}

.course-num{
  width: 50rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999999;
  box-sizing: border-box;
  border: 3rpx solid #ffffff;
}

.course-list{
  width: calc(100% - 50rpx);
  height: 100%;
  position: relative;
}

.course-item{
  position: absolute;
  width: calc((100% - 50rpx) / 7);
  box-sizing: border-box;
}

.course-item_content{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #ffffff;
  padding: 2rpx;
  box-sizing: border-box;
  text-align: center;
}

/* 课程编辑弹窗样式 */
.edit-course-popup {
  width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
  background: #fafafa;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.edit-course-form {
  padding: 40rpx;
  max-height: 800rpx;
  overflow-y: auto;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  min-height: 80rpx;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.form-input:focus {
  border-color: #1989fa;
}

.picker-trigger {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
}

.picker-trigger:active {
  background-color: #f5f5f5;
}

.popup-footer {
  display: flex;
  padding: 30rpx 40rpx;
  border-top: 2rpx solid #f0f0f0;
  background: #fafafa;
  gap: 20rpx;
}

.cancel-btn {
  flex: 1;
  height: 80rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.confirm-btn {
  flex: 1;
  height: 80rpx;
  background: #1989fa;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
}