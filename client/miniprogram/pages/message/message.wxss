/* pages/detailnotice/detailnotice.wxss */
.external-class{
  opacity: 1;
  background-color: #f3f3f3;
}

.external-class-prefix-icon{
  color: var(--td-text-color-primary);
}

.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx; /* 为输入框预留空间 */
}

.scrollarea {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-list {
  display: flex;
  flex-direction: column;
}

.message-group {
  margin-bottom: 20rpx;
}

.time-stamp {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin: 20rpx 0;
}

.message-item {
  display: flex;
  align-items: flex-start;
  margin: 20rpx 0;
  padding: 0 20rpx;
}

.message-item.other {
  flex-direction: row;
  justify-content: flex-start;
}

.message-item.me {
  flex-direction: row;
  justify-content: flex-end;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 80%;
  background-color: #eee;
  margin: 0 10rpx;
}

.message-content-wrapper {
  max-width: 60%;
}

.message-content {
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #f0f0f0;
}

.message-item.me .message-content {
  background-color: #07c160;
  color: #fff;
}

.message-item.other .message-content {
  background-color: #f0f0f0;
  color: #333;
}

.message-image {
  max-width: 100%;
  border-radius: 10rpx;
  display: block;
}

.location-message {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  min-width: 200rpx;
}

.location-title {
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.location-address {
  color: #666;
  font-size: 24rpx;
}

/* 输入框区域样式 */
.input-area {
  position: relative;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.input-box {
  flex: 1;
  margin-right: 20rpx;
}

.message-input {
  width: 95%;
  height: 72rpx;
  margin-right : 20rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
}

.button-area {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.send-button, .function-button {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #1989fa;
  transition: all 0.3s ease;
}

.send-button:active, .function-button:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.send-button .van-icon, .function-button .van-icon {
  color: #fff !important;
}

/* 扩展面板样式 */
.extend-panel {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  z-index: 99;
}

.extend-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.extend-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.extend-item text {
  font-size: 24rpx;
  color: #666;
}

.extend-item-hover {
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

/* 文件消息样式 */
.file-message {
  display: flex;
  align-items: center;
  padding: 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  min-width: 200rpx;
  max-width: 400rpx;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 16rpx;
}

.file-icon image {
  width: 100%;
  height: 100%;
}

.file-info {
  flex: 1;
  overflow: hidden;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-size {
  font-size: 24rpx;
  color: #999;
}

/* 签到消息样式 */
.attend-message {
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  min-width: 200rpx;
  max-width: 400rpx;
}

.attend-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}