.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.username {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
}

.info-list {
  margin-bottom: 30rpx;
}

.form-section {
  margin-bottom: 20rpx;
}

/* 输入框样式优化 */
.van-field {
  padding: 20rpx 0 !important;
}

.van-field__label {
  width: 140rpx !important;
  color: #333;
}

.van-field__input {
  text-align: right;
  color: #666;
}

.van-cell-group {
  border-radius: 12rpx;
  overflow: hidden;
}

.button-section {
  padding: 0 20rpx;
  margin-top: 30rpx;
}

/* 按钮样式优化 */
.van-button {
  border-radius: 8rpx !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
} 