<view class="container">
  <!-- 头像区域 -->
  <view class="avatar-wrapper">
    <image class="avatar" src="{{userInfo.avatar || '/assets/images/default-avatar.png'}}" bind:tap="changeAvatar"></image>
    <text class="avatar-tip">点击更换头像</text>
  </view>

  <!-- 个人信息表单 -->
  <view class="form-section">
    <van-cell-group inset>
      <van-field
        value="{{ userInfo.username }}"
        label="用户名"
        placeholder="请输入用户名"
        bind:change="onUsernameChange"
      />
      <van-field
        value="{{ userInfo.realName }}"
        label="真实姓名"
        placeholder="请输入真实姓名"
        bind:change="onRealnameChange"
      />
      <van-field
        value="{{ userInfo.email }}"
        label="邮箱"
        placeholder="请输入邮箱"
        type="email"
        bind:change="onEmailChange"
      />
      <van-field
        value="{{ userInfo.phone }}"
        label="手机号"
        placeholder="请输入手机号"
        type="number"
        maxlength="11"
        bind:change="onPhoneChange"
      />
    </van-cell-group>
  </view>

  <!-- 确认修改按钮 -->
  <view class="button-section">
    <van-button type="primary" block bind:tap="saveUserInfo">确认修改</van-button>
  </view>
</view> 